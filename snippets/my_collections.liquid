<div class="customCollection">


  <h2>{{ collection.title }}</h2>
{%for product in section.settings.collection.products %} {% if product.featured_image%}
  <img width="300" height="300" src="{{ product | image_url }}" />
  {% endif %}
  <h3>{{ product.title }}</h3>
  <p>{{ product.description }}</p>
  <p>{{ product.price | money }}</p>
  {%endfor%}

</div>

  {{ section.settings.collection.products | json }}